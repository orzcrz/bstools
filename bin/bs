#!/usr/bin/env bash

# Created by crzorz on 2022/09/15
# Copyright © 2022 BaldStudio. All rights reserved.

set -e
set -u
set -o pipefail

entry=$(dirname "${BASH_SOURCE}")

# check virtual env
venv_path="$entry/../venv"

# 检查 venv路径
if [[ ! -d "$venv_path" ]];then
  echo "python 环境不对"
fi

source $venv_path/bin/activate
python "${entry}/bs.py" "$@"